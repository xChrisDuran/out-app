
<div class="container">
    <div class="row justify-content-xs-center">
      <div class="text-center col-md-4 col-md-offset-4">
  <h1>Create a Moment</h1>
   <%= simple_form_for @moment do |f| %>
   <%= f.input :name %>
   <%= f.input :location %>
   <%= f.label :When %>
   <%= f.date_field :date, class: "form-control" %>
   <%= f.input :description %>
   <%= f.button :submit, :method => :put,:class=>'btn btn-primary-full-color' %>
   <%end%>
 </div>
 </div>
 </div>
