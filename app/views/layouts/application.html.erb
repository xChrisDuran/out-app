<!DOCTYPE html>
<html>
  <head>
    <title>Out App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>



    <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#toggle-nav" aria-expanded="false">

              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" id="link_to">Out</a>
          </div>

          <div class="collapse navbar-collapse" id="toggle-nav">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Sign Up", new_user_registration_path, :class => "link_to"%></li>
              <li><%= link_to "Sign In", user_session_path, :class => "link_to"%></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="link_to">More<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Moments", moments_path, :class => "link_to"%></li>
                  <li><%= link_to "About", about_path, :class => "link_to"%></li>
                </ul>
              </li>
            </ul>
          </div>

        </div> <!-- close container div -->
      </nav> <!-- close navbar nav -->







    <p class="notice"> <%= notice %> </p>
    <p class="alert"> <%= alert %> </p>
    <%= yield %>

  </body>
</html>
