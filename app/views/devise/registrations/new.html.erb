<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.text_field :first_name, :autofocus => true, :placeholder => 'First name ', class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, :autofocus => true, :placeholder => 'Last name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: 'form-control' %>
  </div>

    </div>
    <!-- <div class="form-group">
  </div> -->
  <div class="form-group">
      <%= f.date_field :birthday, :autofocus => true, :placeholder => 'Birthday', class: 'form-control' %>

</div>
<!-- <div class="form-group">
</div> -->


<div class="form-group">
</div>

<div class="form-group">
  <%= f.password_field :password, :placeholder => 'Password', class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.password_field :password, :placeholder => 'Confirm Password', class: 'form-control' %>
</div>

  <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  <%= render "devise/shared/links" %>
<% end %>
