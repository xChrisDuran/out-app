<div class="container">
    <div class="row justify-content-xs-center">
      <div class="text-center col-md-4 col-md-offset-4">
        <h2>Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :first_name, :autofocus => true, :placeholder => 'First name ', class: 'form-control'%>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, :autofocus => true, :placeholder => 'Last name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: 'form-control' %>
        </div>

        <!-- <div class="form-group">
  </div> -->
        <div class="form-group">
          <%= f.date_field :birthday, :autofocus => true, :placeholder => 'Birthday', class: 'form-control' %>

        </div>
        <!-- <div class="form-group">
</div> -->

        <div class="form-group">
          <%= f.password_field :password, :placeholder => 'Password', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => 'Confirm Password', class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="fb-login-button" data-width="292" data-max-rows="5" data-size="medium" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="true"></div>

        <%= render "devise/shared/facebook_links" %>
        <br /><%= f.submit "Sign Up",:class=>'btn btn-primary-full-color' %>

        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
