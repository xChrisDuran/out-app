<div class="container">
    <div class="row justify-content-xs-center">
      <div class="text-center col-md-4 col-md-offset-4">

<h2>Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<div class="form-group">
  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.password_field :password, :placeholder => 'Password', class: 'form-control' %>
</div>

  <% if devise_mapping.rememberable? -%>
  <%= render "devise/shared/facebook_links" %>

      <div class="fb-login-button" data-width="292" data-max-rows="5" data-size="medium" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="true"></div>
      <br /><div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <%= f.submit "Sign In", :class=>'btn btn-primary-full-color' %>

    </div>
    <div class="actions">
      <%= render "devise/shared/links" %>
    </div>



  <% end -%>



<% end %>
</div>
</div>
</div>
